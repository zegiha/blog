generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  uuid     String    @id @default(uuid(4))
  id       String
  passowrd String
  articles Article[]
}

enum ArticleStatus {
  DRAFT
  PUBLISH
}

model Article {
  uuid        String        @id @default(uuid(4))
  title       String
  description String
  content     Json
  createdAt   DateTime      @default(now())
  tags        Json
  status      ArticleStatus @default(DRAFT)
  User        User          @relation(fields: [userUuid], references: [uuid])
  userUuid    String
}
